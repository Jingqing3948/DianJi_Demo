.slideshow {
  width: 100%;
  height: 400rpx;
  background-color: #000;
}

.slideshow image {
  width:100%;
}

.banner {
  margin-top: 60rpx;
	height: 750rpx;
}

.banner .row {
	height: 250rpx;
}

.banner .row ul li {
	display: block;
	float: left;
	width: 375rpx;
	height: 250rpx;
	border-collapse: collapse;
	background-color: #fdf8ec;
	text-align: center;
	line-height: 250rpx;
}

.banner .row ul li image {
	display: block;
	height: 100%;
	width: 100%;
}